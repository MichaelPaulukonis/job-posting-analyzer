# ========================================
# AWS Configuration (CloudFormation)
# ========================================
# IMPORTANT: Never commit this file to git
# Create these values from CloudFormation stack outputs (infra/cloudformation/iam-setup.yml)

# AWS Credentials (from CloudFormation stack outputs)
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=your_account_id_here

# CloudFormation Stack Information
CF_STACK_NAME=job-analyzer-iam
CF_ENVIRONMENT=job-analyzer

# RDS Database (populated after Task 2)
RDS_HOST=
RDS_PORT=5432
RDS_DATABASE=jobanalyzer
RDS_USERNAME=dbadmin
RDS_PASSWORD=

# Prisma Database URL (constructed from RDS values above)
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://dbadmin:your_password@your_rds_endpoint:5432/jobanalyzer?schema=public

# S3 Configuration (populated after Task 4)
S3_BUCKET_NAME=
S3_REGION=us-east-1

# App Runner (populated after Task 10)
APP_RUNNER_SERVICE_ARN=

# ========================================
# Firebase Configuration
# ========================================
# Firebase service account (server). This is a JSON object or a path to a JSON file with service account credentials.
# Example: FIREBASE_SERVICE_ACCOUNT='{ "type": "service_account", ... }' or FIREBASE_SERVICE_ACCOUNT=/path/to/firebase-key.json
FIREBASE_SERVICE_ACCOUNT=your-firebase-service-account-json-or-path

# Firebase client configuration (public; client-side)
# Run `firebase init` in your project and paste the corresponding values here

# ========================================
# LLM API Configuration
# ========================================

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# OpenAI
OPENAI_API_KEY=your-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Other LLM Provider
OTHER_LLM_API_KEY=your-api-key
OTHER_LLM_MODEL=model-name

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
NUXT_PUBLIC_API_BASE=http://localhost:3000
NUXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NUXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456
