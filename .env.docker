# Docker-specific environment variables
# This file is used when running the app in Docker containers

# Database connection to local Docker database
DATABASE_URL="postgresql://dbadmin:localdevpass@host.docker.internal:5434/jobanalyzer?schema=public"

# API Keys (load from host .env)
GEMINI_API_KEY=${GEMINI_API_KEY}
GEMINI_MODEL=${GEMINI_MODEL:-gemini-2.5-pro}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
ANTHROPIC_MODEL=${ANTHROPIC_MODEL:-claude-haiku-4-5}
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}

# App configuration
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost:3050
NUXT_PUBLIC_API_BASE=http://localhost:3050
NUXT_PUBLIC_AUTH_DISABLED=true

# AWS S3 Configuration
S3_BUCKET_NAME=job-analyzer-files
AWS_REGION=us-east-1
